<div class="card" style="border-radius: 0;">
  <img 
  src="<%= article.urlToImage %>" 
  class="card-img-top" 
  alt="..."
  style="border-radius: 0;"
  >
  <div class="card-body d-flex flex-column" style="padding: 2rem 2rem;">
    <h5 class="card-title"><%= article.publishedAt.substring(0, 10) %></h5>
    <p class="card-text flex-grow-1" style="font-size: 1.5rem;">
      <%- article.title %>
    </p>
    <a target="_blank" style="width: max-content;" href="<%= article.url %>" class="btn btn-primary">Full article</a>
  </div>
  <% console.log(article) %>
</div>